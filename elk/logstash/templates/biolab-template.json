{
  "index_patterns": ["biolab-*"],
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "index.lifecycle.name": "biolab-ilm-policy",
    "index.lifecycle.rollover_alias": "biolab-logs"
  },
  "mappings": {
    "properties": {
      "@timestamp":    { "type": "date" },
      "level":         { "type": "keyword" },
      "logger_name":   { "type": "keyword" },
      "message":       { "type": "text", "fields": { "keyword": { "type": "keyword", "ignore_above": 512 } } },
      "thread_name":   { "type": "keyword" },

      "service":       { "type": "keyword" },
      "environment":   { "type": "keyword" },

      "requestId":     { "type": "keyword" },
      "traceId":       { "type": "keyword" },
      "spanId":        { "type": "keyword" },
      "userId":        { "type": "keyword" },
      "orgId":         { "type": "keyword" },
      "method":        { "type": "keyword" },
      "uri":           { "type": "keyword" },
      "clientIp":      { "type": "ip", "ignore_malformed": true },

      "http.method":   { "type": "keyword" },
      "http.url":      { "type": "keyword" },
      "http.status":   { "type": "integer" },

      "stack_trace":   { "type": "text", "index": false },

      "geo": {
        "properties": {
          "location":  { "type": "geo_point" },
          "country_name": { "type": "keyword" },
          "city_name":    { "type": "keyword" }
        }
      }
    }
  }
}
